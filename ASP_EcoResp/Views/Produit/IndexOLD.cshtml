@model IEnumerable<ASP_EcoResp.Models.ProduitListItemViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (TempData["ErrorMessage"] is not null)
{
    <div class="alert alert-warning" role="alert">
        <p>@TempData["ErrorMessage"]</p>
    </div>
}
@if (TempData["SuccessMessage"] is not null)
{
    <div class="alert alert-success" role="alert">
        <p>@TempData["SuccessMessage"]</p>
    </div>
}


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomProduit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EcoScore)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomProduit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EcoScore)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id_Produit }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id_Produit }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id_Produit })
            </td>
        </tr>
}
    </tbody>
</table>
